{
    "name": "@sberbusiness/triplex",
    "version": "11.0.0",
    "description": "Библиотека компонент дизайн-системы Triplex.",
    "author": "СберБизнес",
    "license": "Sber Public License at-nc-sa v.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/SberBusiness/triplex.git"
    },
    "scripts": {
        "prebuild": "node tools/task/clear",
        "prebuild:dev": "node tools/task/clear",
        "build:dev": "run-p \"build:css\" \"build:components:dev\" \"build:typings\" && npm run copy:sha256",
        "build": "run-p \"build:css\" \"build:components\" \"build:typings\" && npm run copy:sha256",
        "build:css": "node tools/rollup/less/buildLess.js",
        "build:components": "cross-env NODE_ENV=production node tools/rollup/build.js",
        "build:components:dev": "cross-env NODE_ENV=development node tools/rollup/build.js",
        "build:typings": "node node_modules/typescript/bin/tsc --emitDeclarationOnly -p ./tsconfig.exclude-tests.json",
        "copy:sha256": "node tools/task/copySha256.js",
        "start": "npm run watch",
        "watch": "run-p \"watch:components\" \"watch:typings\"",
        "watch:components": "rollup --config tools/rollup/rollup.config.dev.js -w",
        "watch:typings": "node node_modules/typescript/bin/tsc --emitDeclarationOnly -p ./tsconfig.json -w",
        "postbuild": "run-p \"removedts\" \"generatepackage\"",
        "postbuild:dev": "run-p \"removedts\" \"generatepackage\"",
        "removedts": "node tools/task/removeDtsInFolder",
        "postremovedts": "node tools/task/buidlDtsBundle",
        "generatepackage": "node tools/task/package",
        "build-publish": "npm install && npm run build && npm publish --access public ./out",
        "pretest:unit": "npm run test:unit:clean",
        "test:unit": "jest --config=jest/unit/jest.config.ts",
        "test:clean": "run-p test:unit:clean test:screenshot:clean",
        "test:unit:clean": "rimraf tests/out/unit",
        "test:screenshot:clean": "rimraf tests/out/screenshot",
        "pretest:screenshot": "npm run test:screenshot:clean",
        "test:screenshot": "jest --config=jest/screenshot/jest.config.ts",
        "tsc": "node --max-old-space-size=8192 node_modules/typescript/bin/tsc --noEmit -p tsconfig.exclude-tests.json",
        "eslint": "eslint --ext .ts,.tsx src",
        "eslint:fix": "eslint --ext .ts,.tsx --fix",
        "eslint:dump": "eslint --print-config ./.eslintrc.json",
        "lint:less:fix": "stylelint \"./src/**/*.less\" --syntax less --fix",
        "lint-staged:less:fix": "stylelint --fix",
        "generateIconsIndex": "node tools/task/generateIconsIndex",
        "styleguidist:pre": "npm run build:css && npm run generateIconsIndex",
        "styleguidist": "npm run styleguidist:pre && cross-env STYLEGUIDIST_SETTINGS_MODE=true styleguidist server",
        "styleguidist:tests:screenshot": "npm run styleguidist:pre && styleguidist server",
        "styleguidist:build": "npm run styleguidist:pre && cross-env NODE_ENV=production styleguidist build",
        "styleguidist:build:dev": "npm run styleguidist:pre && cross-env NODE_ENV=development styleguidist build",
        "updatePackageVersion": "node tools/task/updatePackageVersion"
    },
    "dependencies": {
        "@sberbusiness/core-styles": "5.5.0",
        "@sberbusiness/icons": "5.60.0",
        "@sberbusiness/illustrations": "5.23.0",
        "big.js": "5.2.2",
        "element-closest": "3.0.2",
        "focus-trap-react": "9.0.2",
        "lodash.flattendeep": "4.4.0",
        "lodash.isequal": "4.5.0",
        "lodash.isfunction": "3.0.9",
        "lodash.pick": "4.4.0",
        "lodash.pickby": "4.6.0",
        "lodash.range": "3.2.0",
        "lodash.throttle": "4.1.1",
        "lodash.transform": "4.6.0",
        "react-resize-detector": "6.7.6",
        "react-text-mask": "5.5.0",
        "react-transition-group": "2.9.0"
    },
    "devDependencies": {
        "@axe-core/react": "4.7.3",
        "@babel/eslint-parser": "7.22.15",
        "@babel/preset-env": "7.22.15",
        "@rollup/plugin-replace": "4.0.0",
        "@types/big.js": "4.0.5",
        "@types/element-closest": "3.0.0",
        "@types/enzyme": "3.10.12",
        "@types/estree": "1.0.1",
        "@types/jest": "26.0.24",
        "@types/lodash.isempty": "4.4.7",
        "@types/lodash.isequal": "4.5.6",
        "@types/lodash.isfunction": "3.0.7",
        "@types/lodash.pick": "4.4.7",
        "@types/lodash.pickby": "4.6.7",
        "@types/lodash.range": "3.2.7",
        "@types/lodash.throttle": "4.1.7",
        "@types/lodash.transform": "4.6.7",
        "@types/node": "16.11.68",
        "@types/react": "17.0.2",
        "@types/react-dom": "17.0.2",
        "@types/react-test-renderer": "17.0.2",
        "@types/react-text-mask": "5.4.11",
        "@types/react-transition-group": "2.9.0",
        "@typescript-eslint/eslint-plugin": "5.62.0",
        "@typescript-eslint/parser": "5.62.0",
        "@wojtekmaj/enzyme-adapter-react-17": "0.8.0",
        "allure-jasmine": "2.8.0",
        "autoprefixer": "10.4.15",
        "axios": "1.5.0",
        "babel-loader": "9.1.3",
        "clsx": "1.2.1",
        "copy-webpack-plugin": "11.0.0",
        "core-js": "3.32.2",
        "cross-env": "7.0.3",
        "css-loader": "6.8.1",
        "dts-bundle": "0.7.3",
        "enzyme": "3.11.0",
        "eslint": "8.49.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-plugin-jest": "26.9.0",
        "eslint-plugin-jsx-a11y": "6.7.1",
        "eslint-plugin-prettier": "5.0.0",
        "eslint-plugin-react": "7.33.2",
        "eslint-plugin-react-hooks": "4.6.0",
        "husky": "4.3.5",
        "jest": "26.6.3",
        "less": "4.2.0",
        "less-loader": "11.1.3",
        "lint-staged": "13.2.3",
        "lodash.isempty": "4.4.0",
        "moment": "2.29.4",
        "npm-run-all": "4.1.5",
        "postcss": "8.4.29",
        "postcss-less": "6.0.0",
        "postcss-modules": "6.0.0",
        "prettier": "3.0.3",
        "process": "0.11.10",
        "react": "17.0.2",
        "react-docgen-typescript": "2.2.2",
        "react-dom": "17.0.2",
        "react-styleguidist": "13.0.0",
        "react-test-renderer": "17.0.2",
        "rimraf": "3.0.2",
        "rollup": "2.79.1",
        "rollup-plugin-postcss": "4.0.2",
        "rollup-plugin-terser": "7.0.2",
        "rollup-plugin-typescript": "1.0.1",
        "source-map-loader": "4.0.1",
        "style-loader": "3.3.3",
        "stylelint": "15.10.3",
        "stylelint-config-standard": "34.0.0",
        "ts-jest": "26.5.6",
        "ts-loader": "9.4.3",
        "ts-node": "10.9.1",
        "tslib": "2.6.2",
        "typescript": "4.4.4",
        "webpack": "5.88.2"
    },
    "peerDependencies": {
        "moment": "^2.0.0",
        "react": "^16.8.0 || ^17.0.0",
        "react-dom": "^16.8.0 || ^17.0.0",
        "tslib": "^2.0.0"
    },
    "browserslist": [
        "Chrome >= 59",
        "Edge >= 100",
        "Safari >= 10",
        "Firefox >= 50"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "npm run tsc && lint-staged"
        }
    },
    "lint-staged": {
        "!(*test).{ts,tsx}": "npm run eslint:fix",
        "!(*buttons).less": "npm run lint-staged:less:fix"
    }
}
