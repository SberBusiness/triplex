{
    "name": "@sberbusiness/triplex",
    "version": "14.0.4",
    "description": "Библиотека компонент дизайн-системы Triplex.",
    "author": "СберБизнес",
    "license": "Sber Public License at-nc-sa v.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/SberBusiness/triplex.git"
    },
    "scripts": {
        "prebuild": "node tools/task/clear",
        "prebuild:dev": "node tools/task/clear",
        "build:dev": "run-p \"build:css\" \"build:components:dev\" \"build:typings\" && npm run copy:sha256",
        "build": "npm run build:css && run-p \"build:components\" \"build:typings\" && npm run copy:sha256",
        "prebuild:css": "npm run generateThemeCssVariables",
        "build:css": "node tools/rollup/less/buildLess.js",
        "build:components": "cross-env NODE_ENV=production node tools/rollup/build.js",
        "build:components:dev": "cross-env NODE_ENV=development node tools/rollup/build.js",
        "build:typings": "node node_modules/typescript/bin/tsc --emitDeclarationOnly -p tsconfig.build.json",
        "copy:sha256": "node tools/task/copySha256.js",
        "start": "npm run watch",
        "watch": "run-p \"watch:components\" \"watch:typings\"",
        "watch:components": "rollup --config tools/rollup/rollup.config.dev.js -w",
        "watch:typings": "node node_modules/typescript/bin/tsc --emitDeclarationOnly -p tsconfig.json -w",
        "postbuild": "run-p \"removedts\" \"generatepackage\"",
        "postbuild:dev": "run-p \"removedts\" \"generatepackage\"",
        "removedts": "node tools/task/removeDtsInFolder",
        "postremovedts": "node tools/task/buidlDtsBundle",
        "generatepackage": "node tools/task/package",
        "build-publish": "npm ci && npm run build && npm publish --access public ./out",
        "pretest:unit": "npm run test:unit:clean",
        "test:unit": "jest --config=jest/unit/jest.config.ts",
        "test:clean": "run-p test:unit:clean",
        "test:unit:clean": "rimraf tests/out/unit",
        "tsc": "node --max-old-space-size=8192 node_modules/typescript/bin/tsc --noEmit -p tsconfig.build.json",
        "eslint": "eslint --ext .ts,.tsx src",
        "eslint:fix": "eslint --ext .ts,.tsx --fix",
        "eslint:dump": "eslint --print-config ./.eslintrc.json",
        "lint:less:fix": "stylelint \"./src/**/*.less\" --syntax less --fix",
        "lint-staged:less:fix": "stylelint --fix",
        "generateIconsIndex": "node tools/task/generateIconsIndex",
        "generateTokensTypes": "ts-node --project tsconfig.tools.json tools/task/generateRefTokensTypes.ts",
        "generateComponentTokensTemplate": "ts-node --project tsconfig.tools.json tools/task/generateComponentTokensTemplate.ts",
        "pregenerateThemeCssVariables": "npm run generateTokensTypes",
        "generateThemeCssVariables": "ts-node --project tsconfig.tools.json tools/task/generateCssFromDesignTokens",
        "styleguidist:pre": "npm run build:css && npm run generateIconsIndex",
        "styleguidist": "npm run styleguidist:pre && cross-env STYLEGUIDIST_SETTINGS_MODE=true styleguidist server",
        "styleguidist:build": "npm run styleguidist:pre && cross-env NODE_ENV=production styleguidist build",
        "styleguidist:build:dev": "npm run styleguidist:pre && cross-env NODE_ENV=development styleguidist build",
        "updatePackageVersion": "node tools/task/updatePackageVersion"
    },
    "dependencies": {
        "@sberbusiness/core-styles": "5.5.0",
        "@sberbusiness/icons": "6.27.0",
        "@sberbusiness/illustrations": "6.9.0",
        "big.js": "5.2.2",
        "element-closest": "3.0.2",
        "focus-trap-react": "10.3.0",
        "lodash": "4.17.21",
        "rc-util": "5.37.0",
        "react-resize-detector": "9.1.0",
        "react-text-mask": "5.5.0",
        "react-transition-group": "4.4.5"
    },
    "devDependencies": {
        "@axe-core/react": "4.10.0",
        "@babel/eslint-parser": "7.25.8",
        "@babel/preset-env": "7.25.8",
        "@rollup/plugin-node-resolve": "11.2.1",
        "@rollup/plugin-replace": "6.0.1",
        "@rollup/plugin-terser": "0.4.4",
        "@types/big.js": "4.0.5",
        "@types/element-closest": "3.0.2",
        "@types/enzyme": "3.10.12",
        "@types/jest": "29.5.14",
        "@types/lodash": "4.17.16",
        "@types/node": "16.18.2",
        "@types/react": "17.0.2",
        "@types/react-dom": "17.0.2",
        "@types/react-test-renderer": "17.0.2",
        "@types/react-text-mask": "5.4.14",
        "@types/react-transition-group": "4.4.9",
        "@types/react-window": "1.8.8",
        "@typescript-eslint/eslint-plugin": "6.21.0",
        "@typescript-eslint/parser": "6.21.0",
        "@wojtekmaj/enzyme-adapter-react-17": "0.8.0",
        "allure-jest": "2.9.2",
        "autoprefixer": "10.4.20",
        "axios": "1.9.0",
        "babel-loader": "9.2.1",
        "clsx": "1.2.1",
        "copy-webpack-plugin": "11.0.0",
        "core-js": "3.41.0",
        "cross-env": "7.0.3",
        "css-loader": "6.11.0",
        "dts-bundle": "0.7.3",
        "enzyme": "3.11.0",
        "eslint": "8.57.1",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-jest": "28.8.3",
        "eslint-plugin-jsx-a11y": "6.10.0",
        "eslint-plugin-prettier": "4.2.1",
        "eslint-plugin-react": "7.37.1",
        "eslint-plugin-react-hooks": "4.6.2",
        "husky": "4.3.5",
        "jest": "29.7.0",
        "less": "4.2.0",
        "less-loader": "11.1.4",
        "lint-staged": "14.0.1",
        "moment": "2.30.1",
        "npm-run-all": "4.1.5",
        "postcss": "8.4.47",
        "postcss-less": "6.0.0",
        "postcss-modules": "6.0.0",
        "prettier": "2.8.8",
        "process": "0.11.10",
        "react": "17.0.2",
        "react-docgen-typescript": "2.2.2",
        "react-dom": "17.0.2",
        "react-styleguidist": "13.0.0",
        "react-test-renderer": "17.0.2",
        "react-window": "1.8.10",
        "rimraf": "3.0.2",
        "rollup": "2.79.2",
        "rollup-plugin-postcss": "4.0.2",
        "rollup-plugin-typescript": "1.0.1",
        "source-map-loader": "4.0.2",
        "style-loader": "3.3.4",
        "stylelint": "15.11.0",
        "stylelint-config-standard": "34.0.0",
        "ts-jest": "29.3.2",
        "ts-loader": "9.4.3",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "tslib": "2.8.1",
        "typescript": "4.9.5",
        "webpack": "5.99.6"
    },
    "peerDependencies": {
        "moment": "^2.29.4",
        "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
        "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0",
        "tslib": "^2.0.0"
    },
    "browserslist": [
        "Chrome >= 59",
        "Edge >= 100",
        "Safari >= 10",
        "Firefox >= 50"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "npm run tsc && lint-staged"
        }
    },
    "lint-staged": {
        "!(*test).{ts,tsx}": "npm run eslint:fix",
        "!(*buttons).less": "npm run lint-staged:less:fix"
    }
}
